# Pane border
set -g pane-border-style 'bg=terminal fg=white' 

# Active pane border
set -g pane-active-border-style 'bg=terminal fg=white'

# Pane number indicator
set -g display-panes-colour terminal
set -g display-panes-active-colour terminal

# Clock mode
set -g clock-mode-colour white
set -g clock-mode-style 24

# Message
set -g message-style 'bg=terminal fg=terminal'

# Command message
set -g message-style 'bg=terminal fg=terminal'

# Mode
set -g mode-style 'bg=red fg=terminal'
